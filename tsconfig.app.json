{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "allowImportingTsExtensions": true,
  "isolatedModules": true,
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue", "src/**/*.ts", "src/**/*.js", "assets/**/*.json"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
